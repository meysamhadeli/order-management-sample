{
    "AppOptions": {
        "Name": "Order-Management"
    },
    "LogOptions": {
        "Level": "information",
        "LogTemplate": "{Timestamp:HH:mm:ss} [{Level:u4}] {Message:lj}{NewLine}{Exception}",
        "File": {
            "Enabled": false,
            "Path": "logs/logs.txt",
            "Interval": "day"
        }
    },
    "PostgresOptions": {
        "ConnectionString": "Server=localhost;Port=5432;Database=order_management_db;User Id=postgres;Password=postgres;Include Error Detail=true"
    },
    "Jwt": {
        "Authority": "https://localhost:5000",
        "Audience": "order-management-api",
        "RequireHttpsMetadata": false
    },
    "AllowedHosts": "*"
}
